<Application x:Class="_5_CalculatriceFonctionnelle.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_5_CalculatriceFonctionnelle"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"></Setter>
            <Setter Property="FontSize" Value="30"></Setter>
        </Style>
        <BitmapImage x:Key="CalculatorIcon" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="pack://application:,,,/5-CalculatriceFonctionnelle;component/calculator.png"/>

    </Application.Resources>
</Application>
